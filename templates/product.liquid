{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}

<!-- Display featured image -->
<img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">

<!-- Loop through additional images -->
{% for image in product.images %}
<a href="{{ image.src | img_url: 'large' }}">
  <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
</a>
{% endfor %}

<!-- Product title -->
<h1>{{ product.title }}</h1>

<!-- Add to Cart Form -->
<form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" id="AddToCartForm">
  <!-- Hidden input to pass the selected variant ID -->
  <input type="hidden" name="id" value="{{ current_variant.id }}" />

  <!-- Dropdown for selecting variant if there are multiple options -->
  <select name="id" id="productSelect" required>
    {% for variant in product.variants %}
    {% if variant.available %}
    <option value="{{ variant.id }}" {% if variant.id==current_variant.id %}selected{% endif %}>
      {{ variant.title }} - {{ variant.price | money_with_currency }}
    </option>
    {% else %}
    <option disabled="disabled">
      {{ variant.title }} - sold out
    </option>
    {% endif %}
    {% endfor %}
  </select>

  <!-- Display current variant price -->
  <p>Price: {{ current_variant.price | money }}</p>

  <!-- Quantity selector -->
  <label for="Quantity">Quantity</label>
  <input type="number" id="Quantity" name="quantity" value="1" min="1">

  <!-- Add to Cart button -->
  <button type="submit" name="add" id="AddToCart">Add to cart</button>
</form>

<!-- Product description -->
<div>{{ product.description }}</div>