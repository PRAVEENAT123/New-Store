{% comment %} {% comment %} <div class="w-full flex space-x-4">
  <!-- Collection 1 -->
  <a href="{{ section.settings.collection_1.url }}"
    class="flex-1 bg-gray-200 p-4 text-center border rounded-lg hover:bg-gray-300">
    {% if section.settings.collection_1.image %}
    <img src="{{ section.settings.collection_1.image | img_url: '200x200' }}"
      alt="{{ section.settings.collection_1.title }}" class="w-[200px] h-[200px] mx-auto mb-2 rounded-lg">
    {% else %}
    <img src="path/to/default-image.jpg" alt="Default Image" class="w-[200px] h-[200px] mx-auto mb-2 rounded-lg">
    {% endif %}
    <div>{{ section.settings.collection_1.title }}</div>
  </a>

  <!-- Collection 2 -->
  <a href="{{ section.settings.collection_2.url }}"
    class="flex-1 bg-gray-200 p-4 text-center border rounded-lg hover:bg-gray-300">
    {% if section.settings.collection_2.image %}
    <img src="{{ section.settings.collection_2.image | img_url: '200x200' }}"
      alt="{{ section.settings.collection_2.title }}" class="w-[200px] h-[200px] mx-auto mb-2 rounded-lg">
    {% else %}
    <img src="path/to/default-image.jpg" alt="Default Image" class="w-[200px] h-[200px] mx-auto mb-2 rounded-lg">
    {% endif %}
    <div>{{ section.settings.collection_2.title }}</div>
  </a>
</div>
{% schema %}
{
"name": "Two Collection Boxes",
"settings": [
{
"type": "collection",
"id": "collection_1",
"label": "Collection 1"
},
{
"type": "collection",
"id": "collection_2",
"label": "Collection 2"
}
],
"presets": [
{
"name": "Default"
}
]
}
{% endschema %} {% endcomment %}
<h1>This testing form after change the to live </h1> {% endcomment %}