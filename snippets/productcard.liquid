<div class="px-4 py-8">
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for product in collection.products %}
            <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
                <a href="{{ product_info.url }}">
                    {% if product_info_info.featured_image %}
                    <div class="h-80 overflow-hidden">
                        <img class="w-full h-full object-cover"
                            src="{{ product_info.featured_image | img_url: 'medium' }}"
                            alt="{{ product_info.featured_image.alt }}">
                    </div>
                    {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover bg-gray-100' }}
                    {% endif %}
                </a>

                <div class="flex flex-col p-4">
                    <span class="text-sm text-gray-400">{{ product_info.vendor }}</span>

                    <a href="{{ product_info.url }}" class="text-gray-700 uppercase font-medium">{{ product_info.title
                        }}</a>

                    <p class="text-gray-500">{{ product_info.price | money }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

</div>